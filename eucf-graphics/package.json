{
  "name": "eucf-graphics",
  "version": "0.0.0",
  "description": "Team 28 Project for Esports at UCF Broadcast Graphics",
  "homepage": "",
  "author": {
    "name": "COP4331 Team 28 2024Team 28",
    "email": "kdpena312@gmail.com",
    "url": "https://urmom.com"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "extension"
  ],
  "keywords": [
    "",
    "nodecg-bundle"
  ],
  "nodecg": {
    "compatibleRange": "^2.0.0",
    "dashboardPanels": [
      {
        "name": "breakFlavorText",
        "title": "Break Flavor Text",
        "width": 2,
        "file": "breakFlavorText.html",
        "headerColor": "#525F78"
      },
      {
        "name": "teamInfoText",
        "title": "Team Info",
        "width": 2,
        "file": "teamInfo.html",
        "headerColor": "#525F78"
      },
      {
        "name": "sceneSelect",
        "title": "Scene Select",
        "width": 2,
        "file": "scene.html",
        "headerColor": "#525F78"
      },
      {
        "name": "commentatorSelect",
        "title": "Commentator Select",
        "width": 2,
        "file": "commentator.html",
        "headerColor": "#525F78"
      }
    ],
    "graphics": [
      {
        "file": "index.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "build": "node scripts/build.mjs --all",
    "build:extension": "node scripts/build.mjs --extension",
    "watch": "node scripts/build.mjs --all --watch",
    "watch:browser": "node scripts/build.mjs --dashboard --graphics --watch",
    "watch:schemas": "node scripts/build.mjs --schemas --watch",
    "dev": "concurrently --kill-others \"npm run watch:schemas\" \"npm run watch:browser\" \"nodemon\"",
    "generate-schema-types": "trash src/types/schemas && nodecg schema-types"
  },
  "dependencies": {
    "@nodecg/react-hooks": "^1.0.3",
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": "*",
    "react-dom": "*",
    "ts-node": "*"
  },
  "devDependencies": {
    "@nodecg/types": "^2.0.0",
    "@parcel/config-default": "*",
    "@parcel/core": "*",
    "@parcel/reporter-cli": "*",
    "@parcel/validator-typescript": "*",
    "@types/express": "^5.0.0",
    "@types/node": "^18.19.61",
    "concurrently": "*",
    "glob": "^10.2.7",
    "json-schema-to-typescript": "^15.0.3",
    "nodemon": "*",
    "trash-cli": "*",
    "typescript": "^5.1.3"
  },
  "license": "MIT"
}
